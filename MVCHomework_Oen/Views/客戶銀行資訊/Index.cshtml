@model IEnumerable<MVCHomework_Oen.Models.客戶銀行資訊>

@{
    ViewBag.Title = "Index";
}

<h2>客戶銀行資訊管理</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
<p>
    搜尋"銀行名稱" : @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("銀行名稱", "Index", new { sortOrder = "銀行名稱", isDesc = ViewBag.isDesc })
        </th>
        <th>
            @Html.ActionLink("銀行代碼", "Index", new { sortOrder = "銀行代碼", isDesc = ViewBag.isDesc })
        </th>
        <th>
            @Html.ActionLink("分行代碼", "Index", new { sortOrder = "分行代碼", isDesc = ViewBag.isDesc })
        </th>
        <th>
            @Html.ActionLink("帳戶名稱", "Index", new { sortOrder = "帳戶名稱", isDesc = ViewBag.isDesc })
        </th>
        <th>
            @Html.ActionLink("帳戶號碼", "Index", new { sortOrder = "帳戶號碼", isDesc = ViewBag.isDesc })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.銀行名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.銀行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.分行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶號碼)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
